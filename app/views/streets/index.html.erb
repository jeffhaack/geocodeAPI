<h1>Listing streets</h1>

<table>
  <tr>
    <th>Name en</th>
    <th>Name ka</th>
    <th>Official Neighborhood</th>
    <th>City District</th>
    <th>City</th>
    <th>District</th>
    <th>Region</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Number of Addresses</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @streets.each do |street| %>
  <tr>
    <td><%= link_to street.full_name_en, street %></td>
    <td><%= street.full_name_ka %></td>
    <td><%= street.official_neighborhood_id %></td>
    <td><%= street.city_district_id %></td>
    <td><%= street.settlement.name_en %></td>
    <td><%= street.district.name_en %></td>
    <td><%= street.region.name_en %></td>
    <td><%= street.lat %></td>
    <td><%= street.lon %></td>
    <td><%= street.addresses.count %></td>
    <td><%= link_to 'Show', street %></td>
    <td><%= link_to 'Edit', edit_street_path(street) %></td>
    <td><%= link_to 'Destroy', street, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

