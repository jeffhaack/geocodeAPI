<h1>Listing settlements</h1>

<table>
  <tr>
    <th>Name en</th>
    <th>Name ka</th>
    <th>District</th>
    <th>Region</th>
    <th>Lat</th>
    <th>Lon</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @settlements.each do |settlement| %>
  <tr>
    <td><%= settlement.name_en %></td>
    <td><%= settlement.name_ka %></td>
    <td><%= settlement.district.name_en %></td>
    <td><%= settlement.region.name_en %></td>
    <td><%= settlement.lat %></td>
    <td><%= settlement.lon %></td>
    <td><%= link_to 'Show', settlement %></td>
    <td><%= link_to 'Edit', edit_settlement_path(settlement) %></td>
    <td><%= link_to 'Destroy', settlement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

